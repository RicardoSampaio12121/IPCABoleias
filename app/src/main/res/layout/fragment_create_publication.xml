<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_corners_rounded"
    android:clickable="true"
    tools:context=".CreatePublicationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frameReturnButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_return_svgrepo_com" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvPDTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:text="Partida e Destino"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frameReturnButton" />


        <LinearLayout
            android:id="@+id/llh1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPDTitle">

            <LinearLayout
                android:id="@+id/llvFrom1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:orientation="vertical"
                android:weightSum="1">

                <FrameLayout
                    android:id="@+id/flFomIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintStart_toStartOf="@id/llvFrom1"
                    app:layout_constraintTop_toTopOf="@id/llvFrom1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_place" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llvFrom2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:weightSum="1">

                <AutoCompleteTextView
                    android:id="@+id/FromAutoCompleteTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="De"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/llvFrom2"
                    app:layout_constraintTop_toTopOf="@id/llvFrom2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llh2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llh1">

            <LinearLayout
                android:id="@+id/llvTo1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:orientation="vertical"
                android:weightSum="1">

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintStart_toStartOf="@id/llvTo1"
                    app:layout_constraintTop_toTopOf="@id/llvTo1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_flag" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llvTo2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:weightSum="1">

                <AutoCompleteTextView
                    android:id="@+id/ToAutoCompleteTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Para"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/llvTo2"
                    app:layout_constraintTop_toTopOf="@id/llvTo2" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/viewCalendar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llh2" />


        <FrameLayout
            android:id="@+id/frameCalendar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintStart_toStartOf="@id/viewCalendar"
            app:layout_constraintTop_toTopOf="@id/viewCalendar">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_calendar_svgrepo_com" />
        </FrameLayout>


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:clickable="false"
            android:inputType="date"
            android:text="24/07/2022"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/viewCalendar"
            app:layout_constraintStart_toEndOf="@id/frameCalendar"
            app:layout_constraintTop_toTopOf="@id/viewCalendar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="20:20h"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/viewCalendar"
            app:layout_constraintStart_toEndOf="@id/tvDate"
            app:layout_constraintTop_toTopOf="@id/viewCalendar" />


        <View
            android:id="@+id/supporterView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@color/teal_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frameCalendar" />


        <View
            android:id="@+id/viewCar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/supporterView2" />

        <TextView
            android:id="@+id/tvTitleCondutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Sou condutor"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/viewCar"
            app:layout_constraintTop_toTopOf="@id/viewCar" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switcIsDriving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="@id/viewCar"
            app:layout_constraintTop_toTopOf="@id/viewCar" />

        <TextView
            android:id="@+id/tvFreeSpaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text="Lugares livres"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/viewCar"
            app:layout_constraintTop_toBottomOf="@id/tvTitleCondutor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="+"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/circle"
            app:layout_constraintEnd_toEndOf="@id/viewCar"
            app:layout_constraintTop_toTopOf="@id/tvFreeSpaces"/>

        <TextView
            android:id="@+id/tvPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="2"
            app:layout_constraintEnd_toStartOf="@id/btnPlus"
            app:layout_constraintTop_toTopOf="@id/tvFreeSpaces"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLess"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="-"
            android:textAlignment="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/circle"
            app:layout_constraintEnd_toStartOf="@id/tvPlaces"
            app:layout_constraintTop_toTopOf="@id/tvFreeSpaces"/>

        <View
            android:id="@+id/viewRideWith"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/viewCar"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvTitleRideWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quero viajar com"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/viewRideWith"
            app:layout_constraintTop_toTopOf="@id/viewRideWith"/>

        <TextView
            android:id="@+id/tvStudents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text="Estudantes"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/viewRideWith"
            app:layout_constraintTop_toBottomOf="@id/tvTitleRideWith"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swStudents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="@id/viewRideWith"
            app:layout_constraintTop_toBottomOf="@id/tvTitleRideWith"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text="Docentes"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/viewRideWith"
            app:layout_constraintTop_toBottomOf="@id/swStudents"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="@id/viewRideWith"
            app:layout_constraintTop_toBottomOf="@id/swStudents"/>

        <TextView
            android:id="@+id/tvTitleDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:text="Descrição"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewRideWith" />

        <EditText
            android:id="@+id/textArea_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@color/teal_200"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="6"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleDesc" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/IpcaColor"
            android:text="Aplicar filtro"
            app:layout_constraintTop_toBottomOf="@id/textArea_information"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>